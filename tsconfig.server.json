{
    "compilerOptions": {
      "esModuleInterop": true,
      "moduleResolution": "node",
      "jsx": "react",
      "target": "es2019",
      "module": "commonjs",
      "declaration": true,
      "skipLibCheck": true,
      "outDir": "dist/server",
      "rootDir": "src",
      "strict": false,
      "noImplicitAny": false,
      "resolveJsonModule": true
    },
    "include": ["src/server/**/*", "src/shared/**/*"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts"]
  }